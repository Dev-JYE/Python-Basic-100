#6044
a,b=input().split()
a=int(a)
b=int(b)
l=[]
add=a+b
sub=a-b
mul=a*b
div=a//b
rest=a%b
dire=a/b
dire=format(dire,'.2f')
l.append(add)
l.append(sub)
l.append(mul)
l.append(div)
l.append(rest)
l.append(dire)
for i in l:
  print(i)

#6045
a,b,c=input().split()
a=int(a)
b=int(b)
c=int(c)
sum=a+b+c
avg=format((a+b+c)/3,'.2f')
print(sum,avg)

#6046
a=int(input())
print(a<<1) #a를 2배
print(a>>1) #a를 1/2
#2,3을 넣으면 0이 나옴

#6047
#a<<b :a를 2의 b제곱한 것.
a,b=input().split()
a=int(a)
b=int(b)
print(a<<b)
